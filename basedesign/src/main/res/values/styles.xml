<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="super_app_primary_button">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">@null</item>
        <item name="android:background">@drawable/bg_super_app_primary_button</item>
    </style>

    <style name="super_app_edit_text" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/super_app_900_primary</item>
        <item name="colorControlActivated">@color/super_app_900_primary</item>
        <item name="colorControlHighlight">@color/super_app_900_primary</item>
    </style>

    <style name="super_app_hint" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColorHint">@color/gray_500</item>
        <item name="android:gravity">bottom</item>
    </style>
</resources>